@page
@model IdentityUnderTheHood.Pages.HumanResourcesManagementModel
@{
}
<div class="text-center">
    <h1 class="display-4">Human Resources Management</h1>
    <br />
    <p>This page is for HR Managers only</p>
    <br />  
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Temp C</th>
            <th>Temp F</th>
            <th>Summary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.weatherForecastItems)
        {
            <tr>
                <td>@item.Date.ToLongDateString()</td>
                <td>@item.TemperatureC</td>
                <td>@item.TemperatureF</td>
                <td>@item.Summary</td>
            </tr>
        }
    </tbody>
</table>
